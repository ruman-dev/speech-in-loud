<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#78EED4"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/speedInLoud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed in Loud"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_bold"
        />

    <EditText
        android:id="@+id/edText"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/speedInLoud"
        android:hint="Write from here"
        android:textColorHint="#5A5A5A"
        android:fontFamily="@font/ubuntu_regular"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape"
        android:gravity="start"
        android:padding="20dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/hearNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#33B3D3"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/black"
        android:text="Hear now"
        android:textSize="25sp"
        />

</RelativeLayout>